<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180px"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/v_station"
        android:layout_width="36px"
        android:layout_height="36px"
        android:background="@color/app_background_white"
        android:layout_marginLeft="72px"
        android:layout_marginRight="72px"
        android:layout_marginTop="9px"
        android:layout_marginBottom="9px"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/txt_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_station"
        android:textColor="@color/app_txt_unselect"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_txt_unselect"
        android:layout_below="@id/v_station"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
